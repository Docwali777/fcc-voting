<% include ../partials/header %>


  <div class="container">

    <div class="row">
      <a href="/votes"><button class='btn btn-default'><span> All Votes </span></button></a>
  <%  if(user){  %>
  <a href="/user"> <button class='btn btn-default'><span>Votes by: <%- user.username[0].toUpperCase() + user.username.slice(1) %> </span></button></a>
  <hr>
    <a id="tweetThem" target='_blank'><button class="twitter-share-button btn btn-primary" > Share this Voting Poll  </button> </a>
  <%  }  %>



      <hr>
      <div class="panel panel-default">
        <div class="panel-body">
          <h1><%= options.options.title %> ?</h1>
          <div>
            <form action="/votes/<%= options._id %> %>" method='post'>
              <% options.options.select.map(vote=>{ %>
                <input type='radio' value='<%= vote %>' name='label'>
                <%= vote %>

                  <%  }) %>
                  <hr>
                    <button class='btn btn-primary'>Submit Data</button>
            </form>
          </div>
        </div>

      </div>
      <form class='form-inline form-group' action="/votes/<%=options._id %>/edit" method="post">

        <button class='btn btn-success'>Add Options to Vote </button>
        <input class='form-control' type="text" name='select' placeholder="Add options" required="Enter Option">
      </form>


      <a href="/votes">Go Back</a>

    </div>
  </div>
  <div id="chart" class='container'></div>
  <%- svg%>
